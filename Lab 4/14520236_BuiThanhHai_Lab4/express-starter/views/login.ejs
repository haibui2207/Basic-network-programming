<%# views/login.ejs %> 
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>  
    <link href="../public/css/bootstrap.min.css" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="../public/css/general.css">   
  </head>
  <body>    
    <div class="container">
      <div class="jumbotron">
        <h1>Sign in to your account</h1>
          <div class="row">
            <div class="col-md-6">
              <form action="/login" method="post" role="form">
                  <div class="form-group">
                      <label for="username">Email*</label>
                      <span id="IsUsername" class="checkinput"></span>
                      <!--
                      <input type="text" name="username" class="form-control" id="username" placeholder="username">
                      -->
                      <input type="email" name="email" class="form-control" id="username" placeholder="username">
                  </div>
                  <div class="form-group">
                      <label for="password">Password*</label>
                      <span id="IsPassword" class="checkinput"></span>  
                      <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                  </div>
                  <input id="btn-signin" name="login-submit" type="submit" class="btn btn-primary btn-lg" value="Sign in">
                </form>
                <a id="register" href="/signup" class="btn btn-primary btn-lg">Register Now</a>
            </div>
          </div>
          <div class="bg-danger">
          <% if (vaildate) { %>
            <h2><%= message %></h2>
          <% } %>
        </div>
        </div> 
      </div>


    <script src="../public/js/jquery-3.1.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../public/js/bootstrap.min.js"></script>
    <script src="../public/js/login.js"></script>
  </body>
</html>