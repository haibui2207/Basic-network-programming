<%# views/signup.ejs %>
<%# extend('layout') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>  
    <link href="../public/css/bootstrap.min.css" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="../public/css/general.css">   
  </head>
  <body>        
    <div class="container">
      <div class="jumbotron">
        <h1>Register</h1>
          <div class="row">
            <div class="col-md-6">
              <form action="/registered" method="post" role="form">    
                  <div class="form-group">
                      <label for="username">Username*</label>
                      <span id="IsUsername" class="checkinput"></span>
                      <input id="username" name="username" type="text" class="form-control" placeholder="Confirm  password" tabindex="1">  
                  </div>            
                  <div class="form-group">
                      <label for="email">Email address*</label>
                      <span id="IsEmail" class="checkinput"></span>
                      <input id="email" type="email" name="email" class="form-control" id="email" placeholder="Email" tabindex="2">
                  </div>                  
                  <div class="form-group">
                      <label for="password">Password*</label>
                      <span id="IsPassword" class="checkinput"></span>  
                      <input id="password" type="password" name="password" class="form-control" placeholder="Password" tabindex="3">
                  </div>                  
                  <div class="form-group">
                      <label for="password">Confirm Password*</label>
                      <span id="IsConfirm-password" class="checkinput"></span>
                      <input id="confirm-password" type="password" name="confirm-password" class="form-control" placeholder="Confirm password" tabindex="4">
                  </div>              
                  <input id="btn-signup" type="submit" name="register-submit" class="btn btn-primary btn-lg" value="Register Now" tabindex="5">                    
              </form>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <div class="bg-success">
                <%#- success%> 
                <% if (authentication) { %>
                  <h2><%= success %></h2>
                <% } %>     
              </div>
              <div class="bg-danger">
                <% if (vaildate) { %>
                  <h2><%= message %></h2>
                <% } %>
              </div>
              <br>
              <div id="result_1" class="bg-danger"></div><br>
              <div id="result_2" class="bg-danger"></div>       
            </div>
          </div><br>
        </div> 
      </div>


    <script src="../public/js/jquery-3.1.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../public/js/bootstrap.min.js"></script>
    <script src="../public/js/signup.js"></script>
  </body>
</html>