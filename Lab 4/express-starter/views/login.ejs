<%# views/login.ejs %> 
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>  
    <link href="../public/css/bootstrap.min.css" rel="stylesheet"> 
    <link rel="stylesheet" type="text/css" href="../public/css/general.css">   
  </head>
  <body>    
    <div class="container">    
      <div class="jumbotron">
        <h1>Sign in to your account</h1>
        <div class="row">
          <div class="col-md-6">
            <form action="/login" method="post" role="form">
                <div class="form-group">
                    <label for="email">Email address*</label>
                    <span id="IsEmail" class="checkinput"></span>
                    <input type="email" class="form-control" name="username" id="email" placeholder="Email" tabindex="1">
                </div>
                <div class="form-group">
                    <label for="password">Password*</label>
                    <span id="IsPassword" class="checkinput"></span>  
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" tabindex="2">
                </div>
                <input id="btn-signin" type="submit" name="login-submit" class="btn btn-primary btn-lg" tabindex="3" value="Sign in">         
            </form>
            <form action="/signup" method="get">
              <input id="btn-signup" type="submit" class="btn btn-primary btn-lg" tabindex="4" value="Sign up"> 
            </form>            
          </div>            
        </div>
        <div class="bg-danger">
          <% if (vaildate) { %>
            <h2 id="ms"><%= message %></h2>
          <% } %>
        </div>
      </div> 
    </div>


    <script src="../public/js/jquery-3.1.1.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../public/js/bootstrap.min.js"></script>
    <script src="../public/js/validate.js"></script>
    <script src="../public/js/login.js"></script>
  </body>
</html>